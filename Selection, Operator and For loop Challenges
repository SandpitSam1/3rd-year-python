#for loops challenges
#1
for i in range(10):
  print("kebab")

#2
for i in range(0, 3 * 12 + 1, 3):
    print(i)

#3
name = str(input("Input your name>>>"))
timeshow = int(input("how many times repeated?"))

for i in range(timeshow):
  print(name)

#4
number = int(input("Enter a times table: "))

for i in range(1, 13):
  print("showing the", number, "times table")
  print(i ,"x", number, "=", i * number)

#5
