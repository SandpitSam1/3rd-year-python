#6
number = 0 
rainbow =["red","orange","yellow","green","blue","indigo", "violet"]

for i in rainbow:
  number = number + 1
  print ("Colour",number,"is", i)

#7
number = int(input("gimme a number below 100 although any positive integer can work for me"))

for i in range(number, -1, -1):
  print(i)

